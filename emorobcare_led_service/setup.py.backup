from setuptools import find_packages, setup
import os
from glob import glob

package_name = 'emorobcare_led_service'

setup(
    name=package_name,
    version='1.0.0',
    packages=find_packages(exclude=['test']),
    data_files=[
        ('share/ament_index/resource_index/packages',
            ['resource/' + package_name]),
        ('share/' + package_name, ['package.xml']),
        (os.path.join('share', package_name, 'srv'), glob('srv/*.srv')),
        (os.path.join('share', package_name, 'launch'), glob('launch/*.py')),
    ],
    install_requires=['setuptools'],
    zip_safe=True,
    maintainer='nvidia',
    maintainer_email='nvidia@emorobot.com',
    description='ROS 2 service package for controlling EMOROBOT LEDs with advanced effects and animations.',
    license='MIT',
    entry_points={
        'console_scripts': [
            'led_service_node = emorobcare_led_service.led_service_node:main',
        ],
    },
)
